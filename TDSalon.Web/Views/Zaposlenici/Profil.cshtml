@model ZaposlenikVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var SuccessMsg = TempData["SuccessMessage"];

}
<div class="container">
    <h3 class="text-dark text-capitalize">Profil</h3>
    <hr />
    @if (SuccessMsg != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-success alert-dismissible fade show col-md-12">
                <strong>@SuccessMsg</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }

    <form asp-controller="Zaposlenici" asp-action="Sacuvaj">
        <input type="hidden" value=@Model.ZaposlenikId asp-for=@Model.ZaposlenikId />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.Ime class="control-label mb-10">Ime</label>
                    <input class="form-control" type="text" asp-for=@Model.Ime>
                    <span asp-validation-for=@Model.Ime class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.Prezime class="control-label mb-10">Prezime</label>
                    <input class="form-control" type="text" asp-for=@Model.Prezime>
                    <span asp-validation-for=@Model.Prezime class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.Email class="control-label mb-10">Email</label>
                    <input class="form-control" type="text" asp-for=@Model.Email>
                    <span asp-validation-for=@Model.Email class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.Telefon class="control-label mb-10">Telefon</label>
                    <input class="form-control" type="number" asp-for=@Model.Telefon>
                    <span asp-validation-for=@Model.Telefon class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.StaraLozinka class="control-label mb-10">Trenutna lozinka</label>
                    <input class="form-control" type="password" asp-for=@Model.StaraLozinka>
                    <span asp-validation-for=@Model.StaraLozinka class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.NovaLozinka class="control-label mb-10">Nova lozinka</label>
                    <input class="form-control" type="password" asp-for=@Model.NovaLozinka>
                    <span asp-validation-for=@Model.NovaLozinka class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for=@Model.NovaLozinkaPotvrda class="control-label mb-10">Potvrdi lozinku</label>
                    <input class="form-control" type="password" asp-for=@Model.NovaLozinkaPotvrda>
                    <span asp-validation-for=@Model.NovaLozinkaPotvrda class="text-danger small"></span>
                </div>
            </div>
        </div>
        <div class="row mt-md-5">
            <div class="col-lg-12">
                <button type="submit" class="btn col-md-3 btn-outline-info btn-block float-right">Sačuvaj</button>
            </div>
        </div>
    </form>
</div>

