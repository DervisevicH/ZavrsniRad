@model List<ObavijestiVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string SuccessMsg = (string)TempData["poruka"];
}
<div class="container">
    <fieldset class="mb-2 p-md-3" style="border: 1px solid #cecece;">
        <legend class="col-md-4">Pretraži obavijesti</legend>
        <form asp-action="IndexAdmin" method="get">
            <div class="row mb-4 align-items-center">
                <div class="col-md-4">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Pretraži obavijesti..." name="pretraga">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </fieldset>
    @if (SuccessMsg != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-success alert-dismissible fade show col-md-11" role="alert">
                @SuccessMsg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Naslov</h5>
                        <p class="card-text">@item.Obavijest</p>
                        <a asp-action="Uredi" asp-controller="Obavijesti" asp-route-obavijestId="@item.ObavijestId" class="btn btn-primary">Uredi</a>
                        <a asp-action="Obrisi" asp-controller="Obavijesti" asp-route-obavijestId="@item.ObavijestId" class="btn btn-outline-danger">Obriši</a>

                    </div>
                </div>
            </div>

        }
    </div>
</div>