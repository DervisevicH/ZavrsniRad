@model DobavljaciVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var poruka = TempData["SuccessMessage"];
}
<div class="container">
    <h3 class="text-dark text-capitalize">Dobavljači</h3>
    <hr />
    @if (poruka != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-success alert-dismissible fade show col-md-12">
                <strong>@poruka</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }

    <form asp-controller="Dobavljaci" asp-action="Sacuvaj">
        <input type="hidden" asp-for="DobavljacId" />
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for=@Model.NazivFirme class="control-label mb-10">Naziv firme</label>
                            <input class="form-control" type="text" asp-for=@Model.NazivFirme>
                            <span asp-validation-for=@Model.NazivFirme class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for=@Model.KontaktOsoba class="control-label mb-10">Kontakt osoba</label>
                            <input class="form-control" type="text" asp-for=@Model.KontaktOsoba>
                            <span asp-validation-for=@Model.KontaktOsoba class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for=@Model.Email class="control-label mb-10">Email</label>
                            <input class="form-control" type="email" asp-for=@Model.Email>
                            <span asp-validation-for=@Model.Email class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for=@Model.Telefon class="control-label mb-10">Telefon</label>
                            <input class="form-control" type="number" asp-for=@Model.Telefon>
                            <span asp-validation-for=@Model.Telefon class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-md-5">
            <div class="col-lg-12">
                <button type="submit" class="btn col-md-3 btn-outline-info btn-block float-right">Sačuvaj</button>
            </div>
        </div>
    </form>
</div>
