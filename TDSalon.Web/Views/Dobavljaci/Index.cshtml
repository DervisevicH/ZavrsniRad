@model List<DobavljaciVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string SuccessMsg = (string)TempData["poruka"];

}

<div class="container">
    <fieldset class="mb-2 p-md-3" style="border: 1px solid #cecece;">
        <legend class="col-md-4">Pretraži dobavljači</legend>
        <form asp-action="Index" method="get">
            <div class="row  mb-4 align-items-center">
                <div class="col-md-4">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Pretraži narudžbe..." name="naziv">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </fieldset>
    @if (SuccessMsg != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-success alert-dismissible fade show col-md-11" role="alert">
                @SuccessMsg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }

    <fieldset class="mb-2 p-md-3" style="border: 1px solid #cecece;">
        <legend class="col-md-4">Lista Dobavljača</legend>
        <div class="bg-white">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Naziv dobavljača</th>
                        <th scope="col">Kontakt osoba</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefon</th>
                        <th scope="col">Opcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.NazivFirme</th>
                            <td>@item.KontaktOsoba</td>
                            <td>@item.Email </td>
                            <td>@item.Telefon</td>
                            <td>
                                <a asp-action="Uredi" asp-controller="Dobavljaci" asp-route-id="@item.DobavljacId"><i class="fas fa-edit" style="color:blue;" title="Izmijeni"></i></a>
                                <a asp-action="Obrisi" asp-controller="Dobavljaci" asp-route-dobavljacId="@item.DobavljacId" class="text-danger" title="Obrisi" style="cursor:pointer;">
                                    <i class="fa fa-times"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </fieldset>
</div>

