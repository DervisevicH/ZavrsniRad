@model NarudzbeKorisnikVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_KupciLayout.cshtml";
}
<style>
    .fs-18 {
        font-size: 1.125rem !important;
        line-height: 1.4em;
    }
   .card{
       border-radius:0px !important;
   }
    .bordered {
        border: 1px solid #e9e9e9;
    }
    .card-header {
        padding: 0.9375rem 1.875rem;
        margin-bottom: 0;
        background-color: transparent;
        border-bottom: 1px solid #e9e9e9;
    }
    

        .meta {
            padding-right: 1.875rem;
            color: #000;
            -webkit-box-shadow: -1px -1px 0 0 #e9e9e9;
            -moz-box-shadow: -1px -1px 0 0 #e9e9e9;
            box-shadow: -1px -1px 0 0 #e9e9e9;
        }
   

    .order-meta-title {
        display: block;
        margin-bottom: 0.3125rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        color: #999999;
        letter-spacing: .05em;
    }
    a {
        color: #4d4646;
        text-decoration: none;
        background-color: transparent;
    }
</style>
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.11.1/css/all.css">

<div class="container bg-white p-2 p-md-3">
    <div class="row">
        <div class="col">
            <h2>Narudžbe</h2>
        </div>
    </div>
    <div class="row gutter-2">
        @foreach (var item in Model.rows)
        {
            <div class="col-12 mb-md-3">
                <div class="card bordered">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="card-title fs-18"><a href="">Narudžba @item.BrojNarudzbe</a></h2>
                            </div>
                            <div class="col text-right">
                                <span class="dropdown">
                                    <button class="btn btn-lg btn-white btn-ico" id="dropdown-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button"><i class="fas fa-ellipsis-v"></i></button>
                                    <span class="dropdown-menu" aria-labelledby="dropdown-1" style="">
                                        <a class="dropdown-item" href="#!">Detalji</a>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col meta">
                                <h5 class="order-meta-title">Order #</h5>
                                <span>12339201</span>
                            </div>
                            <div class="col meta">
                                <h5 class="order-meta-title">Datum</h5>
                                <span>@item.Datum.ToShortDateString()</span>
                            </div>
                            <div class="col meta">
                                <h5 class="order-meta-title">Ukupno</h5>
                                <span>@item.Ukupno.ToString()KM</span>
                            </div>
                            <div class="col meta">
                                <h5 class="order-meta-title">Status</h5>
                                <span class="text-muted">@item.Status</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

