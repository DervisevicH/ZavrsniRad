@model ProizvodiDodajVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h3 class="text-dark text-capitalize">Novi proizvod</h3>
    <h6 class="text-dark text-capitalize">Detalji o proizvodu</h6>
    <hr />
    <form asp-controller="Proizvodi" asp-action="SacuvajInfo">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for=@Model.Naziv class="control-label mb-10">Naziv</label>
                            <input class="form-control" type="text" asp-for=@Model.Naziv>
                            <span asp-validation-for=@Model.Naziv class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for=@Model.KategorijeLista class="">Kategorija</label>
                            <div class="input-group">
                                <select id="listaKategorija" class="form-control" asp-items=@Model.KategorijeLista asp-for="KategorijaId"><option value="0"></option></select>
                            </div>
                            <span asp-validation-for=@Model.KategorijaId class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for=@Model.DobavljaciLista class="">Dobavljač</label>
                            <div class="input-group">
                                <select id="listaDobavljaca" class="form-control" asp-items=@Model.DobavljaciLista asp-for="DobavljacId"><option value="0"></option></select>
                            </div>
                            <span asp-validation-for=@Model.DobavljacId class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for=@Model.NapravljenoU class="control-label mb-10">Proizvođač</label>
                            <input class="form-control" type="text" asp-for=@Model.NapravljenoU>
                            <span asp-validation-for=@Model.NapravljenoU class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for=@Model.JedinicaMjereLista class="">Jedinica mjere</label>
                            <div class="input-group">
                                <select id="listaDobavljaca" class="form-control" asp-items=@Model.JedinicaMjereLista asp-for="JedinicaMjereId"><option value="0"></option></select>
                            </div>
                            <span asp-validation-for=@Model.JedinicaMjereId class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for=@Model.Boja>Boja</label>
                            <select class="form-control form-control-rounded" asp-for=@Model.Boja>
                                <option value="Bijela">Bijela</option>
                                <option value="Crna">Crna</option>
                                <option value="Crvena">Crvena</option>
                                <option value="Plava">Plava</option>
                                <option value="Siva">Siva</option>
                                <option value="Narandzasta">Narandžasta</option>
                                <option value="Zelena">Zelena</option>
                                <option value="Žuta">Žuta</option>
                                <option value="Smeđa">Smeđa</option>
                            </select>
                            <span asp-validation-for=@Model.Boja class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for=@Model.PreporucenoZa>Preporučeno za</label>
                            <select class="form-control form-control-rounded" asp-for=@Model.PreporucenoZa>
                                <option value="Sve">Sve</option>
                                <option value="DnevneSobe">Dnevne sobe</option>
                                <option value="Kuhinje">Kuhinje</option>
                                <option value="Kupatila">Kupatila</option>
                                <option value="Terase">Terase</option>
                                <option value="PoslovniProstor">Poslovni prostor</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for=@Model.Opis>Opis</label>
                        <textarea class="form-control form-control-rounded" type="text" rows="10" asp-for=@Model.Opis>                    
                        </textarea>
                        <span asp-validation-for=@Model.Opis class="text-danger small"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="row mt-md-5">
            <div class="col-lg-12">
                <button type="submit" class="btn col-md-3 btn-outline-info btn-block float-right">Sljedeća<i class="fal fa-arrow-right ml-2"></i></button>
            </div>
        </div>
    </form>
</div>
