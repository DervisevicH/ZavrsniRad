@model OdgovoriDodajVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h3 class="text-dark text-capitalize">Odgovor</h3>
    <hr />
    <form asp-controller="Odgovori" asp-action="Sacuvaj">
        <input type="hidden" asp-for="PitanjeId" />
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for=@Model.Odgovor class="control-label mb-10">Odgovor na pitanje</label>
                            <textarea class="form-control" type="text" rows="5" asp-for=@Model.Odgovor></textarea>
                            <span asp-validation-for=@Model.Odgovor class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-md-5">
            <div class="col-lg-12">
                <button type="submit" class="btn col-md-3 btn-outline-info btn-block float-right">Sačuvaj</button>
            </div>
        </div>
    </form>
</div>


