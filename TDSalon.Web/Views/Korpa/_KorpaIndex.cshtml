@model KorpaIndexVM
<style>

    .btn-circle {
        width: 30px;
        height: 30px;
        padding: 6px 0px;
        border-radius: 15px;
        text-align: center;
        font-size: 12px;
        line-height: 1.42857;
    }

    .img-product {
        padding: .25rem;
        background-color: #fff;
        border-radius: .25rem;
        max-width: 100%;
        height: auto;
        vertical-align: middle;
    }
</style>
<div class="row">
    <div class="col-md-7">
        @foreach (var item in Model.rows)
        {
            <div class="row mb-2">
                <div class="col-md-2">
                    <img class="img-product" src="/uploads/products/@Html.Raw(item.Slika)" />
                </div>
                <div class="col-md-10">
                    <div class="row justify-content-between">
                        <div class="col-md-4">
                            <p class="p-md-0 mb-0">@item.NazivProizvoda</p>
                            <p class="p-md-0 mb-0">@item.Cijena KM</p>
                            <p class="p-md-0 mb-0">@item.Dimenzija</p>
                        </div>
                        <div class="col-md-3">
                            <input type="number" asp-for="@item.Kolicina" id="txtKolicina" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <a onclick="ukloniStavku(@item.StavkaId)" class="btn btn-warning btn-circle">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        }
    </div>
    <div class="col-md-4">
        <h3>Detalji narudžbe</h3>
        <hr class="mb-md-2" />
        <div class="row">
            <div class="col">
                <p>Ukupno</p>
            </div>
            <div class="col">
                <p>@Model.Ukupno KM</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>Troškovi dostave</p>
            </div>
            <div class="col">
                <p>@Model.TroskoviDostave</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>Ukupno za platiti</p>
            </div>
            <div class="col">
                <p>@Model.UkupnoZaPlatiti KM</p>
            </div>
        </div>
        <button class="btn btn-outline-dark btn-block" style="letter-spacing: .1em;">NARUČI</button>

    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <a href="#">Nastavi sa kupovinom</a>
    </div>
</div>